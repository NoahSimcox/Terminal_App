        <!--                 <DataTemplate x:DataType="x:String"> -->
        <!--                     <TextBox Text="{x:Bind .}" Margin="0,0,0,5"/> -->
        <!--                 </DataTemplate> -->
        <!--             </ItemsControl.ItemTemplate> -->
        <!--         </ItemsControl> -->
        <!--     </ScrollViewer> -->
        <!-- </StackPanel> -->
    </Grid>
    
</Window>

