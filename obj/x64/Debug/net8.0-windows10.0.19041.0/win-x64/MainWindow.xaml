<?xml version="1.0" encoding="utf-8"?>
<Window x:ConnectionId='1'
    x:Class="Terminal_App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Terminal_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Terminal_App">
    
    
    
    
    
        <Grid x:ConnectionId='2' Background="Black" Name="MainGrid" Padding="5">
        <Grid.Resources>
            <!-- Create a custom TextBox style -->
             <Style x:Key="TerminalTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="Black"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="FontFamily" Value="Consolas, Courier New"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal"/>
                                        <VisualState x:Name="PointerOver">
                                            <Storyboard>
                                                <!-- No animation - maintains same appearance -->
                                            </Storyboard>
                                        </VisualState>
                                        <VisualState x:Name="Focused">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement" Storyboard.TargetProperty="BorderBrush">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="White"/>
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                
                                <Border x:Name="BorderElement" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}" 
                                        Background="{TemplateBinding Background}" 
                                        CornerRadius="2"/>
                                
                                <ScrollViewer x:Name="ContentElement"
                                              Margin="{TemplateBinding BorderThickness}"
                                              Padding="{TemplateBinding Padding}"
                                              IsTabStop="False"
                                              AutomationProperties.AccessibilityView="Raw"
                                              ZoomMode="Disabled"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
            <Style TargetType="ListBoxItem" x:Key="ListBoxItemStyle">
                <Setter Property="Background" Value="Black"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontFamily" Value="Consolas"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border Background="{TemplateBinding Background}">
                                <ContentPresenter />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            
        </Grid.Resources>
        
            
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            
        <!-- Output area -->
        
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
        
            <ScrollViewer x:ConnectionId='17' Grid.Column="1" VerticalScrollBarVisibility="Auto" Name="ScrollViewer">
            <TextBox x:ConnectionId='18' x:Name="OutputText"
                     Foreground="White"
                     FontFamily="Consolas, Courier New"
                     FontSize="24"
                     Grid.Column="1"
                     TextWrapping="Wrap"
                     Margin="10, 0,0, 0"
                     Padding="0, 0, 0, 8"
                     IsReadOnly="True"
                     Style="{StaticResource TerminalTextBoxStyle}"
                     BorderThickness="0"/>
            </ScrollViewer>
        </Grid>
        

        
        
        
        <!-- Input area with custom style -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>    
            </Grid.ColumnDefinitions>

            <TextBox x:ConnectionId='13' x:Name="Directory2" 
                       Grid.Column="0"
                       IsReadOnly="True"
                       Foreground="White" 
                       FontFamily="Consolas, Courier New" 
                       FontSize="24"
                       BorderThickness="0, 1, 0, 0"
                       Style="{StaticResource TerminalTextBoxStyle}"
                       TextWrapping="Wrap"/>

            <TextBox x:ConnectionId='14' x:Name="InputBox" 
                     Grid.Column="1"
                     Style="{StaticResource TerminalTextBoxStyle}"
                     BorderThickness="0, 1, 0, 0"
                     Padding="3, 5, 5, 5"
                     FontSize="24"
                                       
                                           />
            
            <Popup x:ConnectionId='15' x:Name="AutocompletePopup"
                                                      
                   DesiredPlacement="Top"
                   HorizontalOffset="-500"
                   VerticalAlignment="Bottom"
                   IsLightDismissEnabled="True"
                                                      >

                <Border Background="Black" BorderBrush="White" BorderThickness="1">
                    <ListBox x:ConnectionId='16' x:Name="SuggestionsList"
                             Background="Black"
                             Foreground="White"
                             FontSize="20"
                             MaxHeight="200"
                             ItemContainerStyle="{StaticResource ListBoxItemStyle}"
                             SelectionMode="Single"
                             SelectedIndex="0"/>
                </Border>
            </Popup>
        </Grid>
        
    </Grid>
</Window>

