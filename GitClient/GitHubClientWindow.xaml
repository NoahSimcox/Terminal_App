<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Terminal_App.GitClient.GitHubClientWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Terminal_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="GitHubClient">
    
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <StackPanel Padding="10" Spacing="10">
            <TextBox PlaceholderText="Directory" Text="{x:Bind Directory, Mode=TwoWay}" />
            <TextBox PlaceholderText="User" Text="{x:Bind User, Mode=TwoWay}" />
            <TextBox PlaceholderText="Email" Text="{x:Bind Email, Mode=TwoWay}" />
            
            <Button Content="Pull" Click="{x:Bind Pull}" Width="100" Margin="0,10,0,0"/>
            
            <StackPanel Orientation="Vertical" Spacing="10" Margin="0, 10, 0, 10">
                <TextBox PlaceholderText="CommitMessage" Text="{x:Bind CommitMessage, Mode=TwoWay}"/> 
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                    <Button Content="Commit" Click="{x:Bind Commit}" Width="100"/>
                    <Button Content="Push" Click="{x:Bind Push}" Width="100"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <!-- <StackPanel Grid.Column="1" Padding="10"> -->
        <!--     <TextBlock Text="Changed files" FontWeight="Bold" Margin="0,0,0,10"/> -->
        <!--     <ScrollViewer VerticalScrollBarVisibility="Auto"> -->
        <!--         <ItemsControl ItemsSource="{x:Bind ChangedFiles}"> -->
        <!--             <ItemsControl.ItemTemplate> -->
        <!--                 <DataTemplate x:DataType="x:String"> -->
        <!--                     <TextBox Text="{x:Bind .}" Margin="0,0,0,5"/> -->
        <!--                 </DataTemplate> -->
        <!--             </ItemsControl.ItemTemplate> -->
        <!--         </ItemsControl> -->
        <!--     </ScrollViewer> -->
        <!-- </StackPanel> -->
    </Grid>
    
</Window>